<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>WaQtek | Gestion des Tickets</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/style.css">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            background: rgba(255, 255, 255, 0.95);
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
        }

        .header h1 {
            color: #333;
            font-size: 28px;
        }

        .header-actions {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        select {
            padding: 12px 15px;
            border-radius: 8px;
            border: 2px solid #ddd;
            background: white;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s;
            min-width: 220px;
        }

        select:hover {
            border-color: #667eea;
        }

        select:disabled {
            background: #f0f0f0;
            cursor: not-allowed;
            opacity: 0.6;
        }

        .btn {
            padding: 12px 24px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-secondary {
            background: #f0f0f0;
            color: #333;
        }

        .btn-logout {
            background: #dc2626;
            color: white;
        }

        .btn-logout:hover {
            background: #b91c1c;
        }

        .main-grid {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 20px;
            margin-bottom: 30px;
        }

        .panel {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
        }

        .current-ticket-panel {
            grid-column: 1;
        }

        .current-ticket {
            text-align: center;
            padding: 40px 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 12px;
            margin-bottom: 20px;
        }

        .current-ticket-label {
            font-size: 14px;
            opacity: 0.9;
            margin-bottom: 10px;
        }

        .current-ticket-number {
            font-size: 72px;
            font-weight: bold;
            line-height: 1;
            margin: 20px 0;
        }

        .current-ticket-status {
            font-size: 16px;
            opacity: 0.9;
        }

        .current-ticket.empty .current-ticket-number {
            color: rgba(255, 255, 255, 0.3);
            font-size: 48px;
        }

        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .action-buttons .btn {
            width: 100%;
            justify-content: center;
            padding: 15px;
            font-size: 16px;
            font-weight: bold;
        }

        .btn-call {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
        }

        .btn-serve {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: white;
        }

        .btn-miss {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: white;
        }

        .tickets-panel {
            grid-column: 2;
        }

        .panel-title {
            font-size: 18px;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #667eea;
        }

        .stats {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 15px;
            margin-bottom: 25px;
        }

        .stat-box {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            border-left: 4px solid #667eea;
        }

        .stat-label {
            font-size: 12px;
            color: #666;
            text-transform: uppercase;
            margin-bottom: 5px;
        }

        .stat-value {
            font-size: 24px;
            font-weight: bold;
            color: #333;
        }

        .tickets-list {
            max-height: 500px;
            overflow-y: auto;
        }

        .tickets-table-container {
            max-height: 500px;
            overflow-y: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
        }

        thead {
            background: #f8f9fa;
            position: sticky;
            top: 0;
        }

        th {
            padding: 12px;
            text-align: left;
            font-weight: 600;
            color: #333;
            border-bottom: 2px solid #ddd;
        }

        td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
        }

        tbody tr:hover {
            background: #f8f9fa;
        }

        .ticket-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px;
            background: #f8f9fa;
            margin-bottom: 10px;
            border-radius: 8px;
            border-left: 4px solid #ddd;
            transition: all 0.3s;
        }

        .ticket-item:hover {
            background: #eef0ff;
            border-left-color: #667eea;
        }

        .ticket-number {
            font-size: 20px;
            font-weight: bold;
            color: #333;
            min-width: 60px;
        }

        .ticket-info {
            flex: 1;
            margin-left: 20px;
        }

        .ticket-time {
            font-size: 12px;
            color: #999;
        }

        .ticket-status {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: bold;
            text-transform: uppercase;
        }

        .status-waiting {
            background: #fef3c7;
            color: #92400e;
        }

        .status-called {
            background: #dbeafe;
            color: #0c4a6e;
        }

        .status-served {
            background: #dcfce7;
            color: #166534;
        }

        .status-missed {
            background: #fee2e2;
            color: #991b1b;
        }

        .empty-state {
            text-align: center;
            padding: 40px 20px;
            color: #999;
        }

        .empty-state-icon {
            font-size: 48px;
            margin-bottom: 15px;
            opacity: 0.5;
        }

        .loading {
            text-align: center;
            padding: 20px;
            color: #666;
        }

        .loading::after {
            content: '';
            display: inline-block;
            width: 6px;
            height: 6px;
            margin-left: 6px;
            border-radius: 50%;
            animation: blink 1.4s infinite;
        }

        @keyframes blink {
            0%, 20%, 50%, 80%, 100% {
                opacity: 1;
            }
            40% {
                opacity: 0.5;
            }
            60% {
                opacity: 0.7;
            }
        }

        .footer {
            text-align: center;
            color: rgba(255, 255, 255, 0.8);
            font-size: 12px;
            margin-top: 30px;
        }

        @media (max-width: 1024px) {
            .main-grid {
                grid-template-columns: 1fr;
            }

            .current-ticket-panel {
                grid-column: 1;
            }

            .tickets-panel {
                grid-column: 1;
            }

            .stats {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
</head>
<body>

<div class="container">
    <!-- HEADER -->
    <div class="header">
        <h1>Gestion des Tickets</h1>
        <div class="header-actions">
            <select id="establishmentSelect">
                <option value="">-- Ã‰tablissement --</option>
            </select>

            <select id="queueSelect" disabled>
                <option value="">-- File d'attente --</option>
            </select>

            <button class="btn btn-primary" onclick="refreshData()">
                Actualiser
            </button>

            <button class="btn btn-logout" onclick="logout()">
                DÃ©connexion
            </button>
        </div>
    </div>

    <!-- MAIN GRID -->
    <div class="main-grid">
        <!-- LEFT: CURRENT TICKET -->
        <div class="panel current-ticket-panel">
            <div class="current-ticket empty" id="currentTicketBox">
                <div class="current-ticket-label">TICKET EN COURS</div>
                <div class="current-ticket-number">â€”</div>
                <div class="current-ticket-status">Aucun ticket</div>
            </div>

            <div class="action-buttons">
                <button class="btn btn-call" onclick="callNextTicket()" id="callBtn" disabled>
                    Appeler le prochain
                </button>
                <button class="btn btn-serve" onclick="serveCurrentTicket()" id="serveBtn" disabled>
                    Servi
                </button>
                <button class="btn btn-miss" onclick="missCurrentTicket()" id="missBtn" disabled>
                    Absent
                </button>
            </div>
        </div>

        <!-- RIGHT: TICKETS LIST -->
        <div class="panel tickets-panel">
            <div class="panel-title">File d'attente</div>

            <!-- STATS -->
            <div class="stats">
                <div class="stat-box">
                    <div class="stat-label">En attente</div>
                    <div class="stat-value" id="waitingCount">0</div>
                </div>
                <div class="stat-box">
                    <div class="stat-label">AppelÃ©s</div>
                    <div class="stat-value" id="calledCount">0</div>
                </div>
                <div class="stat-box">
                    <div class="stat-label">Servis</div>
                    <div class="stat-value" id="servedCount">0</div>
                </div>
                <div class="stat-box">
                    <div class="stat-label">Absents</div>
                    <div class="stat-value" id="missedCount">0</div>
                </div>
            </div>

            <!-- TICKETS LIST -->
            <div class="tickets-table-container">
                <table>
                    <thead>
                        <tr>
                            <th>NÂ° Ticket</th>
                            <th>Statut</th>
                            <th>Client</th>
                            <th>PrioritÃ©</th>
                            <th>Heure</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="ticketsTable">
                        <tr>
                            <td colspan="6" class="empty-state">
                                <div class="empty-state-icon">ðŸ“‹</div>
                                <p>SÃ©lectionnez une file d'attente</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <div class="footer">
        <p>WaQtek &copy; 2026 - SystÃ¨me de Gestion de Files d'Attente</p>
    </div>
</div>



<!-- Core Scripts (Required Order) -->
<script src="../js/config.js"></script>
<script src="../js/core/StateManager.js"></script>
<script src="../js/core/ApiClient.js"></script>
<script src="../js/core/WebSocketClient.js"></script>
<script src="../js/init.js"></script>

<!-- Services -->
<script src="../js/services/AuthService.js"></script>
<script src="../js/services/EstablishmentService.js"></script>
<script src="../js/services/QueueService.js"></script>
<script src="../js/services/TicketService.js"></script>
<script src="../js/services/StatsService.js"></script>
<script src="../js/services/RealtimeService.js"></script>

<!-- Utilities -->
<script src="../js/utils.js"></script>

<!-- Page-Specific Script -->
<script src="../js/pages/enterprise/manage-tickets.js"></script>

<!-- Helper Functions -->
<script>
    // Fonction logout
    function logout() {
        localStorage.removeItem("waqtek_token");
        window.location.href = "login.html";
    }

    // Fonction refreshData
    function refreshData() {
        if (typeof loadTicketsForQueue === 'function' && window.pageState && window.pageState.selectedQueueId) {
            loadTicketsForQueue(window.pageState.selectedQueueId);
        }
    }

    // Fonction callNextTicket
    function callNextTicket() {
        if (typeof handleCallNextTicket === 'function') {
            handleCallNextTicket();
        }
    }

    // Fonction serveCurrentTicket
    function serveCurrentTicket() {
        // ImplÃ©mentation simple - appeler avec le statut "served"
        if (typeof handleUpdateTicketStatus === 'function' && window.pageState && window.pageState.currentTicketId) {
            handleUpdateTicketStatus(window.pageState.currentTicketId, 'served');
        }
    }

    // Fonction missCurrentTicket
    function missCurrentTicket() {
        // ImplÃ©mentation simple - appeler avec le statut "missed"
        if (typeof handleUpdateTicketStatus === 'function' && window.pageState && window.pageState.currentTicketId) {
            handleUpdateTicketStatus(window.pageState.currentTicketId, 'missed');
        }
    }
</script>

</body>
</html>
