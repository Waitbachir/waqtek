<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>WaQtek | Statistiques</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="../css/style.css">

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: #f1f5f9;
        }

        .layout {
            display: flex;
            height: 100vh;
        }

        /* SIDEBAR */
        .sidebar {
            width: 240px;
            background: #0f172a;
            color: #fff;
            padding: 20px;
        }

        .sidebar h2 {
            text-align: center;
            margin-bottom: 30px;
        }

        .sidebar a {
            display: block;
            color: #cbd5e1;
            text-decoration: none;
            padding: 12px;
            border-radius: 6px;
            margin-bottom: 8px;
        }

        .sidebar a:hover {
            background: #1e293b;
            color: #fff;
        }

        /* CONTENT */
        .content {
            flex: 1;
            padding: 25px;
            overflow-y: auto;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .btn-danger {
            background: #dc2626;
            color: #fff;
            border: none;
            padding: 10px 16px;
            border-radius: 6px;
            cursor: pointer;
        }

        /* STATS */
        .stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .card {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(0,0,0,.08);
        }

        .card h3 {
            margin: 0;
            color: #64748b;
            font-size: 14px;
        }

        .card p {
            font-size: 28px;
            font-weight: bold;
            margin-top: 10px;
        }

        /* TABLE */
        table {
            width: 100%;
            border-collapse: collapse;
            background: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 8px 20px rgba(0,0,0,.08);
        }

        th, td {
            padding: 14px;
            text-align: left;
        }

        th {
            background: #e2e8f0;
        }

        tr:not(:last-child) {
            border-bottom: 1px solid #e5e7eb;
        }
    </style>
</head>
<body>

<script>
if (!localStorage.getItem("waqtek_token")) {
    window.location.href = "login.html";
}
</script>

<div class="layout">

    <!-- SIDEBAR -->
    <aside class="sidebar">
        <h2>WaQtek</h2>
        <a href="dashboard.html">üìä Dashboard</a>
        <a href="establishments.html">üè¢ √âtablissements</a>
        <a href="queues.html">üìã Files</a>
        <a href="tickets.html">üé´ Tickets</a>
        <a href="stats.html">üìà Statistiques</a>
    </aside>

    <!-- CONTENT -->
    <main class="content">

        <div class="header">
            <h1>Statistiques</h1>
            <button class="btn-danger" onclick="logout()">D√©connexion</button>
        </div>

        <!-- KPI -->
        <section class="stats">
            <div class="card">
                <h3>√âtablissements</h3>
                <p id="statEst">0</p>
            </div>
            <div class="card">
                <h3>Files d‚Äôattente</h3>
                <p id="statQueues">0</p>
            </div>
            <div class="card">
                <h3>Tickets (total)</h3>
                <p id="statTickets">0</p>
            </div>
            <div class="card">
                <h3>Tickets aujourd‚Äôhui</h3>
                <p id="statToday">0</p>
            </div>
        </section>

        <!-- TABLE -->
        <section>
            <h2>Activit√© r√©cente</h2>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Valeur</th>
                    </tr>
                </thead>
                <tbody id="statsTable">
                    <tr>
                        <td colspan="3">Chargement...</td>
                    </tr>
                </tbody>
            </table>
        </section>

    </main>
</div>

<!-- Core Scripts (Required Order) -->
<script src="../js/config.js"></script>
<script src="../js/core/StateManager.js"></script>
<script src="../js/core/ApiClient.js"></script>
<script src="../js/core/WebSocketClient.js"></script>
